extends ../layouts/application

block content
  .row
    .col-md-4.col-md-offset-4
      h1 Save a link
      form.form-inline(role='form')
        .form-group.has-feedback
          .input-group
            label.control-label.sr-only( for='linkInput')
            .input-group-addon
              i.fa.fa-link.fa-fw
            input.form-control#linkInput( type='text')
            span.form-control-feedback
              i.fa.fa-spinner.fa-spin.hidden#statusIcon
        .form-group
          button.btn.btn-default#saveLinkButton( type='button') Save
  script( src='javascripts/home.js')
